{% extends 'base.html.twig' %}

{% block title %}Modifier {{ bornier.nom }} - Oboba{% endblock %}

{% block body %}
    <h1>Modifier {{ bornier.nom }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.nombreBornes, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.caracteristiques, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.prixUnitaire, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('catalogue_modele_borniers_list') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">{{ message }}</div>
    {% endfor %}
{% endblock %}
