{# templates/catalogue_projet_cables/list.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %}

{% block title %}Catalogue des types de câbles - {{ projet.nom }}{% endblock %}

{% block page_content %}
    <h1 class="text-white">Catalogue des types de câbles pour {{ projet.nom }}</h1>

    <div class="mb-3">
        <div class="row g-2">
            <div class="col-auto">
                <a href="{{ path('projet_show', {'id': projet.id}) }}" class="btn btn-secondary">Retour à {{ projet.nom }}</a>
            </div>
            {% if is_granted('CAN_EDIT_CABLES', projet) %}
                <div class="col-auto">
                    <a href="{{ path('catalogue_projet_cables_new', {'projetId': projet.id}) }}" class="btn btn-primary">Ajouter un type de câble</a>
                </div>
            {% endif %}
        </div>
    </div>

    {{ form_start(filter_form, {'method': 'GET'}) }}
        <div class="row mb-3">
            <div class="col">{{ form_row(filter_form.nom, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col">{{ form_row(filter_form.type, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col">{{ form_row(filter_form.nombreConducteursMax, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col">{{ form_row(filter_form.prixUnitaireMin, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col">{{ form_row(filter_form.prixUnitaireMax, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mt-4">Filtrer</button>
            </div>
        </div>
    {{ form_end(filter_form) }}

    {% if catalogues is empty %}
        <p class="text-white">Aucun câble dans le catalogue pour ce projet.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(catalogues, 'Nom', 'c.nom') }}</th>
                    <th>{{ knp_pagination_sortable(catalogues, 'Type', 'c.type') }}</th>
                    <th>{{ knp_pagination_sortable(catalogues, 'Conducteurs max', 'c.nombreConducteursMax') }}</th>
                    <th>{{ knp_pagination_sortable(catalogues, 'Prix unitaire', 'c.prixUnitaire') }}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for catalogue in catalogues %}
                    <tr>
                        <td>{{ catalogue.nom }}</td>
                        <td>{{ catalogue.type }}</td>
                        <td>{{ catalogue.nombreConducteursMax }}</td>
                        <td>{{ catalogue.prixUnitaire|number_format(2, '.', ',') }}</td>
                        <td>
                            {% if is_granted('CAN_EDIT_CABLES', projet) %}
                                <a href="{{ path('catalogue_projet_cables_edit', {'id': catalogue.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                <form method="post" action="{{ path('catalogue_projet_cables_delete', {'id': catalogue.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ce câble du catalogue ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ catalogue.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(catalogues) }}
        </div>
    {% endif %}
{% endblock %}
