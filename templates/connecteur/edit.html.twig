{# templates/connecteur/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier un connecteur - {{ projet.nom }}{% endblock %}

{% block body %}
    <h1>Modifier le connecteur pour {{ projet.nom }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.catalogueProjetConnecteurs, {'attr': {'class': 'form-select'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('connecteur_list', {'projetId': projet.id}) }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">{{ message }}</div>
    {% endfor %}
{% endblock %}
