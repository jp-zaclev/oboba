{% extends 'base_list_catalogue.html.twig' %}

{% block list_title %}Catalogue des modèles de connecteurs{% endblock %}

{% block page_header %}Catalogue des modèles de connecteurs{% endblock %}

{% block item_type %}connecteur(s){% endblock %}

{% block specific_buttons %}
    <div class="col-auto">
        <a href="{{ path('catalogue_modele_connecteurs_new') }}" class="btn btn-primary">Ajouter un modèle de connecteur</a>
    </div>
{% endblock %}

{% block filter_fields %}
    <div class="col">{{ form_row(filter_form.nom, {'attr': {'class': 'form-control'}}) }}</div>
    <div class="col">{{ form_row(filter_form.nombreContacts, {'attr': {'class': 'form-control'}}) }}</div> {# Déplacé ici #}
    <div class="col">{{ form_row(filter_form.type, {'attr': {'class': 'form-control'}}) }}</div> {# Déplacé ici #}
    <div class="col">{{ form_row(filter_form.prixUnitaire, {'attr': {'class': 'form-control'}}) }}</div>
{% endblock %}

{% block empty_message %}Aucun modèle de connecteur disponible pour le moment.{% endblock %}

{% block delete_confirm_message %}Voulez-vous vraiment supprimer les modèles sélectionnés ?{% endblock %}

{% block table_headers %}
    <th style="width: 5%;"><input type="checkbox" id="select-all"></th>
    <th style="width: 20%;">{{ knp_pagination_sortable(items, 'Nom', 'c.nom') }}</th>
    <th style="width: 15%;">{{ knp_pagination_sortable(items, 'Nombre de contacts', 'c.nombreContacts') }}</th>
    <th style="width: 15%;">{{ knp_pagination_sortable(items, 'Type', 'c.type') }}</th>
    <th style="width: 20%;">Contacts</th>
    <th style="width: 15%;">{{ knp_pagination_sortable(items, 'Prix unitaire', 'c.prixUnitaire') }}</th>
    <th style="width: 15%;">Actions</th>
{% endblock %}

{% block table_body %}
    {% for item in items %}
        <tr>
            <td style="width: 5%;">
                <input type="checkbox" name="selected_items[]" value="{{ item.id }}"
                       class="select-item" {% if item.id in selected_ids %}checked{% endif %}>
            </td>
            <td style="width: 20%;">{{ item.nom }}</td>
            <td style="width: 15%;">{{ item.nombreContacts }}</td>
            <td style="width: 15%;">{{ item.type }}</td>
            <td style="width: 20%;">
                {% if item.catalogueContacts|length > 0 %}
                    <a href="#" data-bs-toggle="collapse" data-bs-target="#contacts-{{ item.id }}" class="toggle-contacts">
                        Voir ({{ item.catalogueContacts|length }})
                    </a>
                    <div id="contacts-{{ item.id }}" class="collapse" style="max-height: 300px; overflow-y: auto;">
                        <ul class="mb-0">
                            {% for contact in item.catalogueContacts %}
                                <li>{{ contact.identifiant }} ({{ contact.type }})</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% else %}
                    Aucun contact
                {% endif %}
            </td>
            <td style="width: 15%;">{{ item.prixUnitaire|number_format(2, '.', ',') }}</td>
            <td style="width: 15%;">
                <a href="{{ path('catalogue_modele_connecteurs_edit', {'id': item.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                <form method="post" action="{{ path('catalogue_modele_connecteurs_delete', {'id': item.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce modèle ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block toggle_selection_path %}{{ path('catalogue_modele_connecteurs_list') }}{% endblock %}
