{# templates/projet/new.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %} {# Pas de mt-4 ici #}

{% block title %}Nouveau projet - Oboba{% endblock %}

{% block page_content %}
    <h1 class="text-white">Créer un nouveau projet</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary me-2">Créer</button>
            <a href="{{ path('projet_mes_projets') }}" class="btn btn-secondary">Retour à mes projets</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
