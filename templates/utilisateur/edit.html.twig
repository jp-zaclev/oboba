{% extends 'base.html.twig' %}

{% block title %}Modifier utilisateur - Oboba{% endblock %}

{% block body %}
    <h1>Modifier {{ utilisateur.nom }}</h1>
    {{ form_start(form, {'attr': {'is_new': false}}) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.plainPassword, {'label': 'Nouveau mot de passe (laisser vide pour ne pas changer)'}) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
    <a href="{{ path('utilisateurs_gestion') }}" class="btn btn-secondary mt-2">Retour</a>
{% endblock %}
