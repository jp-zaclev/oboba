{# templates/utilisateur/new.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %} {# Pas de mt-4 ici #}

{% block title %}Nouvel utilisateur - Oboba{% endblock %}

{% block page_content %}
    <h1 class="text-white">Ajouter un utilisateur</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.plainPassword) }}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary me-2">Cr√©er</button>
            <a href="{{ path('utilisateurs_gestion') }}" class="btn btn-secondary">Retour</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
