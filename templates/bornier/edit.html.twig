{# templates/bornier/edit.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %}

{% block title %}Modifier un bornier - {{ projet.nom }}{% endblock %}

{% block page_content %}
    <h1 class="text-white">Modifier le bornier pour {{ projet.nom }}</h1>

    {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.catalogueProjetBorniers) }}
                    {{ form_widget(form.catalogueProjetBorniers, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.catalogueProjetBorniers) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.localisation) }}
                    {{ form_widget(form.localisation, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.localisation) }}
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary me-2">Enregistrer</button>
                    <a href="{{ path('bornier_list', {'projetId': projet.id}) }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
