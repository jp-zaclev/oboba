{# templates/catalogue_modele_cables/new.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %}

{% block title %}Ajouter un modèle de câble - Oboba{% endblock %}

{% block page_content %}
    <h1 class="text-white">Ajouter un modèle de câble</h1>

    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-white">Informations générales</h3>
                <div class="mb-3">
                    {{ form_row(form.nom, {'attr': {'class': 'form-control w-100'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.type, {'attr': {'class': 'form-control w-100'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.nbConducteurs, {'attr': {'class': 'form-control w-100'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.prixUnitaire, {'attr': {'class': 'form-control w-100'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="text-white">Conducteurs</h3>
                <div id="catalogueConducteurs" data-prototype="{{ form_widget(form.catalogueConducteurs.vars.prototype)|e('html_attr') }}">
                    {% for conducteur in form.catalogueConducteurs %}
                        <div class="conducteur-entry mb-2 d-flex align-items-center">
                            {{ form_widget(conducteur.attribut, {'attr': {'class': 'form-control w-75'}}) }}
                            <button type="button" class="btn btn-danger ms-2 remove-conducteur">Supprimer</button>
                        </div>
                    {% endfor %}
                </div>
                <button type="button" class="btn btn-success mt-2 add-conducteur">Ajouter un conducteur</button>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary me-2">Ajouter</button>
            <a href="{{ path('catalogue_modele_cables_list') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    {{ form_end(form) }}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const collectionHolder = document.getElementById('catalogueConducteurs');
            const addButton = document.querySelector('.add-conducteur');

            // Ajouter un nouveau conducteur
            addButton.addEventListener('click', function () {
                const prototype = collectionHolder.dataset.prototype;
                const index = collectionHolder.querySelectorAll('.conducteur-entry').length;
                const newForm = prototype.replace(/__name__/g, index);
                const newDiv = document.createElement('div');
                newDiv.classList.add('conducteur-entry', 'mb-2', 'd-flex', 'align-items-center');
                newDiv.innerHTML = newForm + '<button type="button" class="btn btn-danger ms-2 remove-conducteur">Supprimer</button>';
                collectionHolder.appendChild(newDiv);
                addRemoveListener(newDiv.querySelector('.remove-conducteur'));
            });

            // Supprimer un conducteur
            function addRemoveListener(button) {
                button.addEventListener('click', function () {
                    button.parentElement.remove();
                });
            }

            // Initialiser les boutons de suppression existants
            document.querySelectorAll('.remove-conducteur').forEach(addRemoveListener);
        });
    </script>
{% endblock %}
