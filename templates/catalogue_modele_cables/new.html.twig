{# templates/catalogue_modele_cables/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un modèle de câble - Oboba{% endblock %}

{% block body %}
    <h1>Ajouter un modèle de câble</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.nombreConducteursMax, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.prixMetre, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}

    <a href="{{ path('catalogue_modele_cables_list') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">{{ message }}</div>
    {% endfor %}
{% endblock %}
