{# templates/security/login.html.twig #}
{% extends 'layout/project_layout.html.twig' %}

{% set container_margin = false %}

{% block title %}Connexion - Oboba{% endblock %}

{% block page_content %}
    <h1 class="text-white">Connexion Ã  Oboba</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post" class="mt-3">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="mb-3">
                    <label for="email" class="form-label text-white">Email</label>
                    <input type="email" name="_username" id="email" class="form-control" value="{{ last_username }}" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label text-white">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
